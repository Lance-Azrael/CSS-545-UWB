<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/floating_button_layout_background">

    <ImageView
        android:id="@+id/floatingButton"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/translate"
        android:src="@drawable/translate_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/translatedText"
        android:layout_width="324dp"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/text_background"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:text="X"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/translatedText"
        app:layout_constraintEnd_toEndOf="@+id/translatedText" />

</androidx.constraintlayout.widget.ConstraintLayout>